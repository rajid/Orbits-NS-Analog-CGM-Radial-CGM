    <line id="minHandOutline1" x1="$-2" y1="-110" x2="$-2" y2="0" stroke-width="2" fill="#e0e0e0" opacity="0" />
    <line id="minHandOutline2" x1="$+4" y1="-110" x2="$+4" y2="0" stroke-width="2" fill="#e0e0e0" opacity="0" />
