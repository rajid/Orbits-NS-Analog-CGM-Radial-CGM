    <line id="hourHandOutline2" x1="$+8" y1="-75" x2="$+8" y2="0" stroke-width="4" fill="#ffffff" opacity="0" />
  </g>

   <g id="mins" pointer-events="visible" transform="translate(50%,50%)">
